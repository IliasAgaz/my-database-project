pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'mysql:latest'
        DOCKER_CONTAINER_NAME = 'mysql-container'
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/IliasAgaz/my-database-project.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build(DOCKER_IMAGE)
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Remove any existing container with the same name
                    sh "docker rm -f ${DOCKER_CONTAINER_NAME} || true"

                    // Run the MySQL container
                    sh "docker run -d --name ${DOCKER_CONTAINER_NAME} -e MYSQL_ROOT_PASSWORD=W7301@jqir# -e MYSQL_DATABASE=001myproject -p 3306:3306 ${DOCKER_IMAGE}"
                }
            }
        }
    }
}
