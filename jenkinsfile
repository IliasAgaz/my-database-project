pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/IliasAgaz/my-database-project.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    bat "docker build -t custom-mysql ."
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Remove any existing container with the same name
                    bat "docker rm -f mysql-container || true"

                    // Run the MySQL container
                    bat "docker run -d -p 3306 --name mysql-container custom-mysql"
                    
                }
            }
        }
        stage('Wait for MySQL') {
            steps {
                script {
                    bat """
                    @echo off
                    echo Waiting for MySQL to be ready...
                    set count=0
                    :loop
                    set /a count+=1
                    docker exec mysql-container mysql -u root -p rootpassword -e "SELECT 1"
                    if %errorlevel%==0 (
                        echo MySQL is ready!
                        exit /b 0
                    )
                    if %count%==30 (
                        echo MySQL is not ready after 30 attempts, exiting...
                        exit /b 1
                    )
                    echo Waiting...
                    timeout /t 5 >nul
                    goto loop
                    """
                }
            }
        }

        stage('Initialize Database') {
            steps {
                script {
                    // Example of running a simple SQL command
                    bat "docker exec mysql-container mysql -u root -p rootpassword -e \"CREATE DATABASE IF NOT EXISTS database-project;\""
                }
            }
        }
    }
}
